@model  ECommerceMVC.ViewModels.LoginVM
@{
    ViewData["Title"] = "Dang Nhap";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Dang Nhap</h1>
        <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row ">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.MaKh" type="text" class="form-control">
                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.MatKhau"  class="form-control">
                            <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Dang Nhap</button>
                <a asp-action="QuenMatKhau" asp-controller="KhachHang" class="btn border-danger">Quen Mat Khau</a>
            </div>
        </form>
    </div>
</div>
